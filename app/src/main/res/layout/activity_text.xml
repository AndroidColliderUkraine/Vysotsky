    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:scrollbarStyle="insideInset"
        android:id="@+id/text_scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp">
            <!--<TextView
                android:id="@+id/tv_song_text"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text_color"
                android:textIsSelectable="true"
                android:background="@drawable/background_for_songs"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:paddingRight="6dp" />-->
            <WebView
                android:id="@+id/tv_song_text"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text_color"
                android:textIsSelectable="true"
                android:background="@drawable/background_for_songs"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:paddingRight="6dp" />
            <!--<TextView
                android:id="@+id/tv_song_remarks"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/bg_color"/>-->

            <TextView
                android:id="@+id/tv_commentari"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textSize="16dp"
                android:text="@string/commentarii"
                android:background="@drawable/background_for_songs"
                android:padding="5dp" />

            <TextView
                android:gravity="left"
                android:id="@+id/tv_song_comments"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color"
                android:background="@drawable/background_for_songs"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color"
                android:background="@drawable/background_for_songs"
                android:padding="10dp">

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/et_username"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/edit_text_white_color"
                    android:hint="@string/name_hint" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="start"
                    android:background="@drawable/background_for_big_text"
                    android:inputType="textMultiLine"
                    android:id="@+id/et_comment_field"
                    android:hint="@string/comment_hint"
                    android:textColor="@color/text_color"
                    android:layout_below="@+id/et_username"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/comment_button"
                    android:id="@+id/btn_comment"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/background_for_sort_types"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </RelativeLayout>
            <!--
                        <TextView
                            android:id="@+id/tv_song_comments"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/bg_color"/>-->
            <!--<SeekBar
                android:id="@+id/text_size_seek_bar"
                style="@android:style/Widget.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>-->
        </LinearLayout>

    </ScrollView>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/minus"
        android:id="@+id/iv_minus"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/text_scrollView"
        android:layout_alignEnd="@+id/text_scrollView"
        android:alpha="0.9"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/plus"
        android:id="@+id/iv_plus"
        android:layout_above="@+id/iv_minus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:alpha="0.9" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/minus"
        android:id="@+id/iv_down_acc"
        android:alpha="0.9"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/plus"
        android:id="@+id/iv_up_acc"
        android:alpha="0.9"
        android:layout_above="@+id/iv_down_acc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="false" />



    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/minus"
        android:id="@+id/iv_down_scroll"
        android:alpha="0.9"
        android:adjustViewBounds="true"
        android:layout_above="@+id/iv_up_acc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/plus"
        android:id="@+id/iv_up_scroll"
        android:alpha="0.9"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/iv_down_scroll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_color"
        android:text="@string/android_collider_company"
        android:background="@color/action_bar_color"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15dp"
        android:id="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_for_songs"
        android:text="HTML"
        android:id="@+id/checkBox_html"
        android:layout_above="@+id/iv_plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp" />


</RelativeLayout>
